NODE_ENV=production
PORT=5000

# Database Configuration - Replace with your secure values
DATABASE_URL=postgresql://username:password@host:5432/database

# Email Configuration - Replace with your SMTP settings
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your-email@yourdomain.com
SMTP_PASSWORD=your-secure-email-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your SaaS Platform
ADMIN_EMAIL=admin@yourdomain.com

# JWT Secret - Generate a strong 64-character secret
JWT_SECRET=generate-a-strong-64-character-secret-key-for-production-use-only

# Azure AD Configuration - Replace with your Azure app values
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_REDIRECT_URI=https://yourdomain.com/api/platform/auth/azure/callback

# Base URLs for production
BASE_URL=https://yourdomain.com
CLIENT_URL=https://yourdomain.com

# CORS allowed origins for external demos (comma-separated)
# Example: Angular at 5173, .NET at 5299
CORS_ORIGINS=http://localhost:5173,http://localhost:5299
