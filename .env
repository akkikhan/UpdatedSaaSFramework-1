# =============================================================================
# SAAS FRAMEWORK - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/saas_framework?sslmode=disable

# =============================================================================
# JWT AUTHENTICATION (REQUIRED)
# =============================================================================
JWT_SECRET=your-super-secure-random-jwt-secret-key-here-min-32-chars

# =============================================================================
# EMAIL SERVICE (REQUIRED FOR NOTIFICATIONS)
# =============================================================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USERNAME=dev-saas@primussoft.com
SMTP_PASSWORD=First@099
FROM_EMAIL=dev-saas@primussoft.com
FROM_NAME=SaaS Factory Platform

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development

# =============================================================================
# OAUTH PROVIDERS (OPTIONAL)
# =============================================================================
AZURE_AD_CLIENT_ID=your-azure-application-client-id
AZURE_AD_CLIENT_SECRET=your-azure-application-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# =============================================================================
# PLATFORM CONFIGURATION (OPTIONAL)
# =============================================================================
ADMIN_EMAIL=admin@yourplatform.com
ADMIN_PASSWORD=change-this-secure-password
PLATFORM_NAME=Your SaaS Platform
PLATFORM_URL=https://yourplatform.com

# =============================================================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =============================================================================
DEBUG=false
DISABLE_RATE_LIMITING=false
AUTO_SEED_DATA=false
ENABLE_MONITORING=true
LOG_LEVEL=info
