# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Email Configuration (Office365/Outlook)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your-email@outlook.com
SMTP_PASS=your-email-password
FROM_EMAIL=your-email@outlook.com

# Authentication
JWT_SECRET=your-jwt-secret-key-min-32-characters-long

# Azure AD Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_REDIRECT_URI=http://localhost:5000/api/platform/auth/azure/callback

# Base URLs for OAuth callbacks
BASE_URL=http://localhost:5000
CLIENT_URL=http://localhost:5000

# Comma or space separated list of allowed absolute URL prefixes for cross-app post-login redirects
# Example for local multi-app development (Angular at 5173, .NET at 5299):
# ALLOWED_RETURN_URL_PREFIXES=http://localhost:5173,http://localhost:5299
ALLOWED_RETURN_URL_PREFIXES=

# (Optional) Additional comma-separated origins to allow via CORS middleware if implemented
# CORS_ORIGINS=http://localhost:5173,http://localhost:5299

# Development Settings
NODE_ENV=development
PORT=5000
