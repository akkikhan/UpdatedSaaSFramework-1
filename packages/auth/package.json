{
  "name": "@saas-framework/auth",
  "version": "1.0.0",
  "description": "Enterprise authentication and authorization SDK for SaaS applications with Azure AD, Auth0, MFA, and SAML support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "example-*.js",
    "example-*.jsx"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "publish-package": "npm publish --access public"
  },
  "keywords": [
    "saas",
    "authentication",
    "authorization",
    "jwt",
    "oauth",
    "auth0",
    "azure-ad",
    "saml",
    "mfa",
    "multi-factor",
    "rbac",
    "multi-tenant",
    "express",
    "security"
  ],
  "author": "SaaS Framework Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "@saas-framework/auth-client": "1.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saas-framework/auth"
  },
  "homepage": "https://github.com/saas-framework/auth#readme",
  "publishConfig": {
    "access": "public"
  }
}
