# Test Environment Variables
NODE_ENV=test

# Database Configuration (Test Database)
DATABASE_URL=postgresql://user:password@localhost:5433/saas_test_db

# Redis Configuration (Test Redis)
REDIS_URL=redis://:password@localhost:6380

# JWT Configuration
JWT_SECRET=test-jwt-secret-placeholder

# Email Configuration (Test/Mock)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=password
SMTP_FROM=test@example.com
SMTP_FROM_NAME=Test SaaS Platform

# Platform Admin Configuration
PLATFORM_ADMIN_EMAIL=admin@test.com
PLATFORM_ADMIN_PASSWORD=test-password
PLATFORM_ADMIN_NAME=Test Platform Administrator

# Test Configuration
VERBOSE_TESTS=false
TEST_TIMEOUT=30000

# Azure AD Test Configuration (for Azure AD tests)
AZURE_TENANT_ID=test-tenant-id
AZURE_CLIENT_ID=test-client-id
AZURE_CLIENT_SECRET=test-client-secret

# Other test-specific configurations
PORT=3001
LOG_LEVEL=error
